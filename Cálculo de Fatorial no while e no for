        "n = int(input(\"Entre com um número inteiro\"))\n",
        "resp = 1\n",
        "for cont in range(2, n+1):\n",
        "    resp  = resp * cont\n",
        "print(\"\\nO fatorial de\", n, \"é\", resp)"
