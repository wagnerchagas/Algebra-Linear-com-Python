        "#versão com while\n",
        "n = int(input(\"Entre com um número  inteiro:\"))\n",
        "resp = 1 \n",
        "cont = 2\n",
        "while cont <= n:\n",
        "  resp = resp * cont\n",
        "  cont = cont + 1\n",
        "print(\"\\n0 fatorial de\", n, \"é\", resp)\n"
